{
  "compilerOptions": {
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "allowJs": true,
    "jsx": "react",
    "esModuleInterop": true,
    "baseUrl": ".",
    "target": "es5",
    "strict": true,
    "lib": [ "es2015", "dom" ],
    "paths": {
      "@Common/*": ["src/common/*"],
      "@Components/*": ["src/lib/*"],
      "@Api/*": ["src/api/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
